@prefix : <https://joinup.ec.europa.eu/collection/rpam/1.1.0/ontology#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix ubl: <http://docs.oasis-open.org/ubl#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ccev: <https://joinup.ec.europa.eu/collection/semic/ccev/2.0.3/ontology#> .
@prefix ccts: <http://www.unece.org/cefact#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix org: <http://www.w3.org/ns/org#> .
@base <http://data.europa.eu/RPaM/ontology#> .

<https://joinup.ec.europa.eu/collection/rpam/1.1.0/ontology#> rdf:type owl:Ontology ;
                                        owl:versionIRI <https://joinup.ec.europa.eu/collection/rpam/1.1.0/ontology> .

#################################################################
#    Object Properties
#################################################################

:constraint rdf:type owl:ObjectProperty; 
            rdfs:domain :Empowerment ;
            rdfs:range ccev:CriterionProperty ;
            rdfs:label "Constraint"@en ;
            rdfs:definition "The constraints that are related to an empowerment."@en .

:id rdf:type owl:ObjectProperty, owl:FunctionalProperty ;
                       rdfs:domain :Mandate, :Empowerment, :Mandatee, :Mandator;
                       rdfs:range ccts:Identifier ;
                       rdfs:label "Identifier"@en ;
                       rdfs:definition "The identifier of a mandate, mandator, mandatee or empowerment."@en .

:description rdf:type owl:ObjectProperty ;
                       rdfs:domain :Mandate, :Empowerment, :Mandatee, :Mandator;
                       rdfs:range xsd:string ;
                       rdfs:label "The description of a mandate, mandator, mandatee or empowerment."@en .

:empowerment rdf:type owl:ObjectProperty, owl:FunctionalProperty;
          rdfs:label "hasEmpowerment"@en ;
          rdfs:definition "The assignment of one power and restrictions on its use to one or more mandatees ."@en .

:intermediary rdf:type owl:ObjectProperty ;
              rdfs:label "hasIntermediary"@en .
              #skos:definition "..."@en . 

:lifeSpan rdf:type owl:ObjectProperty ;
          rdfs:domain :Mandate ;
          rdfs:range ubl:Period ;
          rdfs:label "hasLifeSpan"@en ;
          skos:definition "The dates of creation and striking-off of a mandate in the eMandate Registry."@en .
                                 
:mandator  rdf:type owl:ObjectProperty, owl:FunctionalProperty ;
          rdfs:label "hasMandator" ;
          rdfs:definition "The person that empowers." .

:mandatee  rdf:type owl:ObjectProperty, owl:FunctionalProperty ;
          rdfs:label "hasMandatee" ;
          rdfs:definition "The person being empowered." .

:powerType  rdf:type owl:ObjectProperty , owl:FunctionalProperty;
          rdfs:domain :Empowerment ;
          rdfs:range :EUPowerTaxonomy ;
          rdfs:label "hasPowerType."@en ;
          skos:definition "The type of power with which the mandator empowers its mandatee(s)." .

:statusType rdf:type owl:ObjectProperty ;
               rdfs:domain :Power ;
               rdfs:range skos:Concept ;
               rdfs:label "hasStatusType"@en ;
               skos:definition "The status of the empowerment." .


#################################################################
#    Data properties
#################################################################

:delegationLevel rdf:type owl:DatatypeProperty , owl:FunctionalProperty ;
                           rdfs:domain :Empowerment ;
                           rdfs:range xsd:nonNegativeInteger ;
                           rdfs:label "currentDelegationLevel"@en ;
                           skos:definition "The number of times that a power has been assigned by a mandatee to another mandatee."@en .

:description rdf:type owl:DatatypeProperty , owl:FunctionalProperty ;
             rdfs:domain :Mandate , :Empowerment , ccev:CriterionProperty ;
             rdfs:range xsd:string ;
             rdfs:label "description"@en .
             # skos:definition "...."@en . 

#################################################################
#    Classes
#################################################################

:Empowerment rdf:type owl:Class ;
       rdfs:label "Empowerment"@en ;
       skos:definition "The specification of how one mandator assigns one power, and possible constraints on its use, to one or more Mandatees." ;
       owl:subClassOf [
                             a owl:Restriction ;
                             owl:someValuesFrom skos:Concept ;
                             owl:minCardinality "1"^^xsd:nonNegativeInteger ;
                             owl:onProperty :powerType
                           ] ;
     
        owl:subClassOf [
                             a owl:Restriction ;
                             owl:someValuesFrom skos:Concept ;
                             owl:onProperty :statusType
                           ] ;  

       owl:subClassOf [
                             a owl:Restriction ;
                             owl:someValuesFrom ccev:CriterionProperty ;
                             owl:onProperty :Constraint
                           ] ;

      owl:subClassOf [
                             a owl:Restriction ;
                             owl:someValuesFrom :Mandatee ;
                             owl:Cardinality "1"^^xsd:nonNegativeInteger ;
                             owl:onProperty :mandatee
                           ] ;  
      owl:subClassOf [
                             a owl:Restriction ;
                             owl:someValuesFrom :Intermediary ;
                             owl:maxCardinality "1"^^xsd:nonNegativeInteger ;
                             owl:onProperty :intermediary
                           ] .                         

:Intermediary rdf:type owl:Class ;
              rdf:subClassOf foaf:Agent ;
              rdfs:label "Intermediary"@en .
              # skos:definition "..."@en .

:Mandate rdf:type owl:Class ;
       rdfs:label "Mandate"@en ;
       skos:definition "Collection of empowerments."@en ;

      owl:subClassOf [
                             a owl:Restriction ;
                             owl:allValuesFrom :Mandator ;
                             owl:cardinality "1"^^xsd:nonNegativeInteger ;
                             owl:onProperty :mandator
                           ] ;
       owl:subClassOf [
                             a owl:Restriction ;
                             owl:someValuesFrom :Empowerment ; #allValuesFrom?
                             owl:minCardinality "1"^^xsd:nonNegativeInteger ;
                             owl:onProperty :empowerment
                           ] .
      
:Mandatee rdf:type owl:Class ;
          rdfs:subClassOf org:Organization ;
          rdfs:label "Mandatee"@en .
         # skos:definition "Natural or legal person that acts on behalf of another natural or legal person."@en .

:Mandator rdf:type owl:Class ;
          rdfs:subClassOf foaf:Agent ;
          rdfs:label "Mandator"@en ;
          skos:definition "Person who needs an activity executed in his name; creator of the mandate."@en ;

          owl:subClassOf [
                             a owl:Restriction ;
                             owl:someValuesFrom :Mandate ;
                             owl:onProperty :relatedMandate
                           ] .
          
ccev:CriterionProperty rdf:type owl:Class ;
                       rdfs:label "Criterion Property"@en ;
                       skos:definition "The criterion/s that apply to an empowerment."@en .


